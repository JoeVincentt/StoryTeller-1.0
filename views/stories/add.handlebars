<h1>Add story</h1>
<div class="row">
    <form action="/stories" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title">
                <label class="black-text" for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                </select>
                <label class="black-text" for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <label for="filled-in-box">
                    <input type="checkbox" name="allowComments" class="filled-in" checked="checked" id="filled-in-box" />
                    <span class="black-text">Allow Comments</span>
                </label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="addStory" name="body"></textarea>
            </div>
        </div>

        <input type="submit" value="Save" class="btn">
    </form>
</div>